@{
    Layout = "~/Views/Shared/_Public/_Layout.cshtml";
}
@section pageTitleSection{
    Login
}
@section LogoSection{
    @Html.Partial("~/Views/Shared/_Partials/_Logo.cshtml")
}
<div class="login-box-body">
    <p class="login-box-msg">Autentique-se e publique sem fronteiras.</p>

    <form action="/Supermercados/Index?slug=shoprite" method="post">
        <div class="form-group has-feedback">
            <input type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox"> Recordar-se de mim
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <div class="social-auth-links text-center">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-social btn-whetushop btn-flat">
            <i class="fa fa-search search"></i> Regista
            o
            seu
            supermercado aqui!
        </a>

    </div>
    <!-- /.social-auth-links -->

    <a href="#">I forgot my password</a><br>

</div>

@section scripts{
    <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' /* optional */
                });
            });
    </script>
}

